@model CreateBlogViewModel
@{
	Layout = "/Views/Shared/_UserLayout.cshtml";
}
<div class="container-fluid">

    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <form asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="card-header">
                        <i class="fas fa-pen-fancy mr-1"></i>
                        Write a Post
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Blog.Title"></label>
                            <input asp-for="Blog.Title" class="form-control" required />
                            <span asp-validation-for="Blog.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Blog.Content"></label>
                            <textarea asp-for="Blog.Content" class="form-control textarea" rows="8"></textarea>
                            <span asp-validation-for="Blog.Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Blog.Category"></label>
                            <select asp-for="Blog.CategoryID" class="form-control" asp-items="ViewBag.Categories">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="Blog.CategoryID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Blog.Image"></label>
                            <textarea asp-for="Blog.Image" class="form-control textarea" rows="1"></textarea>
                            <span asp-validation-for="Blog.Image" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>