@model SideBarViewModel
@{
}
@* Search *@
<div class="col-lg-4">
    <div class="sidebar">
        <div class="row">
            <div class="col-lg-12">
                <div class="sidebar-item search">
                    <form id="search_form" name="gs" method="GET" asp-controller="Blog" asp-action="Search">
                        <input type="text" name="searching" class="searchText" placeholder="type to search...">
                    </form>
                </div>
            </div>

@* Blog SideBar *@
<div class="col-lg-12">
    <div class="sidebar-item recent-posts">
        <div class="sidebar-heading">
            <h2>BÀI VIẾT GẦN ĐÂY</h2>
        </div>
        <div class="content">
            <ul>
                @foreach (var item in Model.Blogs.Take(3))
                {
                    <li>
                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogID">
                            <h5>@item.Title</h5>
                            <span>@item.DateTime?.ToString("dd/MM/yyyy")</span>
                  
                        </a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>

  @* Category SideBar *@
<div class="col-lg-12">
    <div class="sidebar-item categories">
        <div class="sidebar-heading">
            <h2>DANH MỤC BÀI VIẾT</h2>
        </div>
        <div class="content">
            <ul>
               @foreach(var item in Model.Categories)
               {
                    <li><a asp-controller="Blog" asp-action="Index" asp-route-category="@item.CategoryID">- @item.Name</a></li>
               }
               
            </ul>
        </div>
    </div>
</div>

@* Tag SideBar *@
<div class="col-lg-12">
    <div class="sidebar-item tags">
        <div class="sidebar-heading">
            <h2>Tag Clouds</h2>
        </div>
        <div class="content">
            <ul>
                @foreach(var item in Model.Categories)
                {
                <li><a asp-controller="Blog" asp-action="Index" asp-route-category="@item.CategoryID">@item.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>

