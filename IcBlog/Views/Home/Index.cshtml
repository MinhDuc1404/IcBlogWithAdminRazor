
@model HomeViewModel

@{
    ViewData["Title"] = "IC Home";
}

<div class="main-banner header-text">
    <div class="container-fluid">
        <div class="owl-banner owl-carousel">
            @foreach (var item in Model.Blogs.Take(5))
            {
                <div class="item">
                    <img src="@item.Image" width="520px" height="450px" alt="">
                    <div class="item-content">
                        <div class="main-content">
                            <div class="meta-category">
                                <span>@item.Category.Name</span>
                            </div>
                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogID"><h4>@item.Title</h4></a>
                            <ul class="post-info">
                                <li><a href="#">@($"{item.Author.FirstName} {item.Author.LastName}")</a></li>
                                <li><a href="#">@item.DateTime</a></li>

                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">

                        @foreach (var item in Model.Blogs.Take(3))
                        {
                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="@item.Image" width="770px" height="340px" alt="">
                                    </div>
                                    <div class="down-content">
                                        <span>@item.Category.Name</span>
                                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogID"><h4>@item.Title</h4></a>
                                        <ul class="post-info">
                                            <li><a href="#">@($"{item.Author.FirstName} {item.Author.LastName}")</a></li>
                                            <li><a href="#">@item.DateTime?.ToString("dd/MM/yyyy")</a></li>
                                        </ul>

                                        <p>
                                            @(
                                                item.Content.Length > 200
                                                ? item.Content.Substring(0, 300) + "..."
                                                : item.Content
                                                )
                                        </p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-6">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        <li><a href="#">@item.Category.Name</a></li>
                                                    </ul>
                                                </div>
                                                <div class="col-6">
                                                    <ul class="post-share">
                                                        <li><i class="fa fa-share-alt"></i></li>
                                                        <li><a href="#">Facebook</a>,</li>
                                                        <li><a href="#"> Twitter</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-lg-12">
                            <div class="main-button">
                                <a href="/blog.html">View All Posts</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
