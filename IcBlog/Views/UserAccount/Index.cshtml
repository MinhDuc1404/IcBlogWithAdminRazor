@{
    Layout = "/Views/Shared/_UserLayout.cshtml";
}
@model IcBlog.Infrastructure.Models.ApplicationUser

@{
    ViewData["Title"] = "User Information";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Full Name:</div>
                <div class="col-md-9">@Model.FirstName @Model.LastName</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Email:</div>
                <div class="col-md-9">@Model.Email</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Phone Number:</div>
                <div class="col-md-9">@Model.PhoneNumber</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Address:</div>
                <div class="col-md-9">@Model.Address</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Created Date:</div>
                <div class="col-md-9">@Model.CreatedDate.ToString("f")</div>
            </div>
        </div>
    </div>
</div>
